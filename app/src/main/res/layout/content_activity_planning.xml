<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cooked.hb2.activityPlanning"
    tools:showIn="@layout/activity_planning">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Filter" />

    </android.support.design.widget.TextInputLayout>

    <Switch
        android:id="@+id/swActiveOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Only" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/plannedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
