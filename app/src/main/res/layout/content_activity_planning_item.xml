<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cooked.hb2.activityPlanningItem"
    tools:showIn="@layout/activity_planning_item">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edtPlannedName"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/lblPlannedType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Planned Type"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblStartDate"/>

    <TextView
        android:id="@+id/lblPlanned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Planned"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPlannedType"/>

    <TextView
        android:id="@+id/edtPlanned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="pickPlanned"
        android:text="**Planned Configuration**"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/lblPlanned"
        app:layout_constraintTop_toBottomOf="@+id/edtPlannedType"/>

    <TextView
        android:id="@+id/lblStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Start"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSubCategoryName"/>

    <TextView
        android:id="@+id/lblEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text=", End"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/edtStartDate"
        app:layout_constraintTop_toBottomOf="@+id/edtSubCategoryName" />

    <TextView
        android:id="@+id/edtEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="pickEndDateTime"
        android:text="End Date"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/lblEndDate"
        app:layout_constraintTop_toBottomOf="@+id/edtSubCategoryName" />

    <TextView
        android:id="@+id/edtStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="pickStartDateTime"
        android:text="Start Date"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/lblStartDate"
        app:layout_constraintTop_toBottomOf="@+id/edtSubCategoryName"/>

    <TextView
        android:id="@+id/lblSubCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Category"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radCurrentAccount"/>

    <TextView
        android:id="@+id/edtPlannedType"
        android:layout_width="250dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="pickPlannedType"
        android:text="**Planned Type**"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/lblPlannedType"
        app:layout_constraintTop_toBottomOf="@+id/edtStartDate" />

    <TextView
        android:id="@+id/edtSubCategoryName"
        android:layout_width="285dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="pickCategory"
        android:text="**Category**"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/lblSubCategoryName"
        app:layout_constraintTop_toBottomOf="@+id/radCashAccount" />

    <RadioButton
        android:id="@+id/radCurrentAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="pickCurrentAccount"
        android:text="Current Account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPlannedName"/>

    <RadioButton
        android:id="@+id/radCashAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="pickCashAccount"
        android:text="Cash Account"
        app:layout_constraintStart_toEndOf="@+id/radCurrentAccount"
        app:layout_constraintTop_toBottomOf="@+id/edtPlannedName"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edtMatchType"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPlanned">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Match Type"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edtMatchDescription"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMatchType">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Match Description"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edtMatchAmount"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMatchDescription">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Match Amount"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="saveItem"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="deleteItem"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnOk" />

</android.support.constraint.ConstraintLayout>
