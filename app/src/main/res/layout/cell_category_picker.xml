<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:background="#00000000"
        android:contentDescription="@string/cdEdit"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cellcat_CategoryName"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/cellcat_CategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/captionCategoryName"
        android:textSize="10sp"
        tools:ignore="SmallSp"/>

    <TextView
        android:id="@+id/cellcat_SubCategoryName"
        android:layout_width="213dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:text="@string/captionSubCategoryName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEdit"
        app:layout_constraintTop_toBottomOf="@+id/cellcat_CategoryName" />

</androidx.constraintlayout.widget.ConstraintLayout>
